<!-- First Part -->

<div class="row flex-lg-row-reverse align-items-center mb-4 py-3">
  <div class="col-12 col-lg-6 ml-5">
    <img
      src="/img/hero-image.png"
      width="607"
      height="510"
      class="d-block mx-lg-auto img-fluid"
      loading="lazy"
      alt="hero-image"
    />
  </div>
  <div class="col-12 col-lg-6">
    <h1 class="display-5 fw-bold mb-5">Huge Selection of new recipe ideas!</h1>
    <p class="lead">
      Explore our new latest wide varities of recipes ideas including the
      family-friendly meals ,sweet and easy desserts ,vegetarian meals,quick and
      delicious baking recipes...
    </p>
  </div>
  <div class="d-grid d-md-flex gap-2 justify-content-md-start">
    <a href="/explore" class="btn btn-primary btn-dark btn-lg px-4 md-2"
      >Explore Latest</a
    >
    <a href="/random" class="btn btn-outline-secondary btn-lg px-4 md-2"
      >Show Random</a
    >
  </div>
</div>

<!-- Category part -->

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-6 mt-5">
  <% if(categories != ""){ %> <% categories.forEach((category,index) =>{ %>
  <a href="/categories" class="col text-center category-link">
    <div class="category-img shadow">
      <img
        src="/img/<%-category.img %>"
        loading="lazy"
        alt="<%- category.name %>"
      />
    </div>
    <div class="pt-4">
      <p><%- category.name %></p>
    </div>
  </a>
  <% }) %> <% } %>

  <a href="/categories" class="col text-center category-link">
    <div class="category-img shadow">
      <img src="/img/view-all.jpg" loading="lazy" alt="View all" />
    </div>
    <div class="pt-4">
      <p>View all Categories</p>
    </div>
  </a>
</div>

